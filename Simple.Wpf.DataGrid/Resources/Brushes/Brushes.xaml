<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:rd="clr-namespace:Simple.Wpf.DataGrid.Resources.ResourceDictionaries">

    <ResourceDictionary.MergedDictionaries>

        <rd:SharedResourceDictionary Source="../Colors/Colors.xaml" />

    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="NumberBrush"
                     Color="Black"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="DefaultNumberBackgroundBrush"
                     Color="{StaticResource DefaultBackgroundColor}"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="TextBrush"
                     Color="Black"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="DateBrush"
                     Color="DarkBlue"
                     po:Freeze="True" />

    <SolidColorBrush x:Key="DefaultBackgroundBrush"
                     Color="{StaticResource DefaultBackgroundColor}"
                     po:Freeze="True" />

</ResourceDictionary>